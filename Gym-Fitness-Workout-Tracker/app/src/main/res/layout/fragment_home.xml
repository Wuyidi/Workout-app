<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="edu.monash.fit4039.gym_fitness_workout_tracker.fragment.HomeFragment">


    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cardView"
            android:layout_marginTop="25dp"
            android:text="Awesome Me"
            android:textColor="@color/spinner_text"
            android:textSize="24dp"
            android:textStyle="bold|italic" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/main_startButton"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="50dp">


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pedometer_background" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Steps"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/steps"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="0 steps"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <Button
                android:id="@+id/main_stopButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:hint="STOP RUNNING"
                android:textColorHint="@color/button_text"
                android:textSize="@dimen/text_view_size_large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/main_startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:hint="START RUNNING"
                android:textColorHint="@color/button_text"
                android:textSize="@dimen/text_view_size_large"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
