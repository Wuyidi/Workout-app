<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.monash.fit4039.gym_fitness_workout_tracker.activity.ViewExerciseActivity"
    android:background="@android:color/background_dark"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp">
    </LinearLayout>

    <TextView
        android:id="@+id/exerciseNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Exercise Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Difficulty"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_view_size_large"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/exerciseDifficultyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Easy"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_view_size_large"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Impact Level"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_view_size_large"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/exerciseImpactText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_view_size_large"
            android:textAlignment="center"
            android:text="Low"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_view_size_large"
            android:textColor="#FFFFFF"
            android:text="Focus Area"
            android:textAlignment="center"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/exerciseFocusAreaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_view_size_large"
            android:textColor="@android:color/darker_gray"
            android:text="Abs"
            android:textAlignment="center"
            android:layout_weight="0.5"/>

    </LinearLayout>


    <TextView
            android:id="@+id/exerciseUrlText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_view_size_large"
            android:textColor="@android:color/darker_gray"
            android:text="www.exercise.com"
            android:textAlignment="center"
            android:autoLink="web"/>




</LinearLayout>
